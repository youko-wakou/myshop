<div class="col-md-12 col-xs-12" style="margin:20px 10px;">
<% @items.each do |item| %>
  <% if item.view == 1 %>
    <%= link_to item_path(id: item.id) do %>
      <div class="col-md-3 col-xs-12">
        <div class="thumbnail img-rounded">
          <p style="text-align: center;"><small><%= item.created_at %></small></p>
          <%= image_tag item.image.url,:style => 'width:215px; height:165px;over-flow:hidden;',:class => 'img-responsive' %>
        <p style="text-align: center;">[<%= item.name %>]</p>
        
        </div>
      </div>
    <% end %>
  <% else %>
      <div class="col-md-3 col-xs-12"style=" opacity: 50%">
        <div class="out thumbnail img-rounded">
          <p style="text-align: center;"><small><%= item.created_at %></small></p>
          <%= image_tag item.image.url,:style => 'width:215px; height:165px;over-flow:hidden;',:class => 'img-responsive' %>
        <p style="text-align: center;">[<%= item.name %>]</p>
        
        </div>
      </div>
  <% end %>
<% end %>
</div>
<div class="col-md-12 col-xs-12">
  <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 text-center">
    <%= paginate @items %>
  </div>
</div>


