<div class="col-md-12 col-xs-12" style="margin:15px;">
  <div class="col-md-6 col-xs-8 col-xs-offset-2 col-md-offset-3 text-center">
    <h1 class="news">Goods Ranking</h1>
  </div>
  <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
    <% @five_num.zip(@top).each do |num,item| %>
      <div class="col-sm-6 col-md-3 col-xs-12 rank thumbnail">
        <%= image_tag item.image.url,:class => 'col-md-12 col-xs-12',:style => 'height:200px;' %>
        <span class="badge" style="background:#3fccff"><%= num %></span>
      </div>
    <% end %>
  </div>
  <% if logged_in? %>
    <div class="col-md-12 col-xs-12 text-center"style="padding:10px;">
      <%= link_to favorites_ranking_path,:style => 'color:#ff6073' do %>
        <p style="font-size:15px;font-weight:bold;">ランキングを確認する？<span class="glyphicon glyphicon-hand-right"></span>&nbsp;&gt;&gt;</p>
       <% end %>
    </div>
  <% end %>
</div>
