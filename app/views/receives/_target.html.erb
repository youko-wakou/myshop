<div class="col-md-12 col-xs-12"style="margin: 15px 0;">
  <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 bg-danger text-center img-rounded" style="padding: 10px 0;">
    <% @target.each do |target| %>
    <% @user.each do |user| %>
      <%= image_tag @image, :class => 'col-md-6 col-md-offset-3 img-circle img-responsive',:style => 'width: 250px;height:250px;' %>
      <div class="col-md-12 col-xs-12">
        <p>&lt;[<%= user.name %>]さんへの返信&gt;</p>
        <p>Title: [<%= target.title %>]</p>
        <div style="border: 2px dotted #ffaac0;">
          <%= target.content %>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
</div>
