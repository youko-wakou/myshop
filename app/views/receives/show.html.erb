<div class="col-md-12 col-xs-12">
  <div class="bg-warning col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 img-rounded"style="padding:10px;">
    <div class="col-md-12 col-xs-12 text-center">
      <% @receive.each do |receive| %>
        <h1>title: [<%= receive.title %>]</h1>
        <p>from: [<%= User.find(receive.user_id).name %>]</p>
        <% @name = Message.find_by(id: receive.message_id).user_id %>
        <p>for: [<%= User.find(@name).name %>]</p>
        <div class="bg-info col-md-10 col-xs-10 col-xs-offset-1 col-md-offset-1"style="padding:10px;">
          <p>message:</p>
          <%= receive.content %>
        </div>
      <% end %>
    </div>
  </div>
    <%= link_to messages_path do %>
      <div class="col-md-12 col-xs-12 text-center"style="margin-top: 15px;">
        <span class="fa fa-reply-all fa-2x"></span>
      </div>
    <% end %>
</div>
