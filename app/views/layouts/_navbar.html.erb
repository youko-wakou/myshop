      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="pan-menu nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li class="text-center"><%= link_to mypages_path,:class => 'icon-menu' do %><span class="fa fa-home top fa-2x"></span><% end %></li>
            <li class="text-center"><%= link_to users_list_path do %><span class="top fa fa-user-circle fa-2x"></span><% end %></li>
