<div class="col-md-12 col-xs-12" style="margin:15px 0;">
  <div class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1 img-rounded" style="background:#e6e6e6; padding: 20px 0;">
    <% @user.each do |user| %>
      <%= link_to user_path(id: user.id) do %>
        <div class="col-md-6 col-sm-6 col-xs-12" style="margin: 15px 0;">
          <% @image = Image.find_by(user_id: user.id) %>
          <% if @image.nil? %>
            <%= image_tag 'user.png',:class => 'img-responsive col-md-6 col-xs-6',:style => 'widht: 150px; height: 130px; over-flow: hidden' %>
          <% else %>
            <%= image_tag @image.image.url,:class => 'img-responsive col-md-6 col-xs-6',:style => 'widht: 150px; height: 130px; over-flow: hidden'%>
          <% end %>
          <div class="col-md-6 col-xs-6">
            <p style="font-weight: bold;">[<%= user.name %>]</p>
          </div>
            
        </div>
      <% end %>
    <% end %>
    
  </div>
  <div class="col-md-12 col-xs-12 text-center">
    <%= paginate @user %>
  </div>
</div>