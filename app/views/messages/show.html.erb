<div class="col-md-12 col-xs-12">
  <div class="bg-info col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1" style="padding:10px;">
    <div class="col-md-12 col-xs-12 text-center">
       <% @message.each do |message| %>
      <p>差出人: &nbsp;[<%= User.find_by(id: message.user_id).name %>]</p>
      <p>宛先:&nbsp;[<%= User.find_by(id: message.select_user).name %>]</p>
      <h2><%= message.title %></h2>
    </div>
      <div class ="bg-danger col-md-6 col-md-offset-3 col-xs-12 text-center img-rounded" style="padding: 10px;">
        <%= message.content %>
      </div>
    <% end %>
  </div>
  <%= link_to messages_path do %>
    <div class="col-md-12 col-xs-12 text-center"style="margin-top: 15px;">
      <span class="fa fa-reply-all fa-2x"></span>
    </div>
  <% end %>
</div>
