<% @user_message.each do |user| %>
<% @message.each do |message| %>
  <div class="col-md-12 col-xs-12" style="margin:20px 0;">
    <div class="col-md-12" style="background: #d6d6d6; border-radius: 15px;padding: 15px 0;">
      <%= image_tag @image,:class => 'img-rounded col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4' %>
      <div class="col-xs-10 col-xs-offset-1 col-md-offset-1 col-md-10">
        <h3 style="border-bottom: 2px dotted #ffaac0;">Title: [<%= message.title %>]</h3>
        <p style="border-bottom: 2px dotted #ffaac0;">for: <%= user.name %></p>
        <p style="border-bottom: 2px dotted #ffaac0;">受信日：<%= message.created_at.time.strftime("%Y年%m月%d日 %H:%M:%S") %></p>
        <div style="border: 2px dotted #ffaac0;">message：<%= message.content %></div>
        <%= link_to receives_path(message: message.id),:method => 'get' do %>
          このメッセージに返信する<span class="fa fa-envelope"></span>
        <% end %>
      </div>
    </div>
    <% if  @receive_if != nil %>
      <%= render :file => 'messages/_reaction' %>
    <% else %>
      <div class="text-center col-xs-8 col-xs-offset-4 col-md-6 col-md-offset-6 bg-info img-rounded" style="margin:15px 0;padding: 10px;">
        <p style="color: gray">・・・・・・・・・・・</p>
      </div>
    <% end %>
    
  </div>
<% end %>
<% end %>