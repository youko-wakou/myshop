<%= link_to messages_message_path do %>
  <div class="col-md-12 col-xs-12 text-center" style="margin:15px 0;">
    <span class="fa fa-envelope  fa-5x"style="color:#f27d00"></span>
    <p style="color:#f27d00">Your Message List &gt;&gt;</p>
  </div>
<% end %>
<div class="col-md-12 col-xs-12">
  <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2">
    <%= form_for(@message,:url => {:action => 'create'}) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title,:class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :select_user %>
        <%= f.collection_select :select_user,User.all, :id,:name,{:include_blank => true},{:class =>'form-control'} %>
      </div>
      <div class="fomr-group">
        <%= f.label :content %>
        <%= f.text_area :content,:class => 'form-control' %>
      </div>
      <div class="col-md-12 col-xs-12" style="margin-top: 15px;">
        <div class="col-xs-6 col-md-6 col-md-offset-3 col-xs-offset-3">
          <%= f.submit 'Send',:class => 'button-change btn-lg btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
